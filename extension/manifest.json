{
	"manifest_version": 2,
	"name": "TornTools 2",
	"version": "6.0.0",
	"description": "Several tools for Torn.",
	"icons": {
		"16": "resources/images/icon_16.png",
		"48": "resources/images/icon_48.png",
		"128": "resources/images/icon_128.png"
	},
	"browser_action": {
		"default_title": "TornTools 2",
		"default_popup": "pages/popup/popup.html",
		"default_icon": "resources/images/icon_128.png"
	},
	"author": "Gregor Kaljulaid - Mephiles[2087524]",
	"background": {
		"scripts": [
			"scripts/global/globalClasses.js",
			"scripts/global/globalData.js",
			"scripts/global/globalDatabase.js",
			"scripts/global/globalFunctions.js",
			"scripts/background.js"
		]
	},
	"permissions": [
		"storage",
		"notifications",
		"tabs",
		"https://api.torn.com/"
	],
	"optional_permissions": [
		"https://yata.yt/"
	],
	"web_accessible_resources": [
		"resources/images/*.png",
		"pages/*",
		"scripts/background.js",
		"scripts/*.inject.js",
		"vendor/*"
	],
	"options_ui": {
		"page": "pages/settings/settings.html",
		"open_in_tab": true
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{3754707b-1aa4-4c6f-96e7-5b1cdc1de5f9}"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.torn.com/*"
			],
			"css": [
				"scripts/global/globalStyle.css",
				"scripts/content/global/ttGlobal.entry.css"
			],
			"js": [
				"vendor/fontawesome/fontawesome.js",
				"scripts/global/globalClasses.js",
				"scripts/global/globalData.js",
				"scripts/global/globalDatabase.js",
				"scripts/global/globalFunctions.js",
				"scripts/content/global/ttGlobal.entry.js"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"https://www.torn.com/*"
			],
			"css": [
				"scripts/content/global/ttGlobal.css"
			],
			"js": [
				"scripts/content/global/ttGlobal.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/index.php*"
			],
			"css": [
				"scripts/content/home/ttHome.css",
				"scripts/content/home/ttFlying.css"
			],
			"js": [
				"scripts/content/home/ttHome.js",
				"scripts/content/home/ttFlying.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/item.php*"
			],
			"css": [
				"scripts/content/items/ttItems.css"
			],
			"js": [
				"vendor/jquery/jquery.js",
				"scripts/content/items/ttItems.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/city.php*"
			],
			"css": [
				"scripts/content/city/ttCity.css"
			],
			"js": [
				"scripts/content/city/ttCity.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/companies.php*"
			],
			"css": [
				"scripts/content/companies/ttCompanies.css"
			],
			"js": [
				"scripts/content/companies/ttCompanies.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/factions.php*"
			],
			"css": [
				"scripts/content/factions/ttFactions.css"
			],
			"js": [
				"scripts/content/factions/ttFactions.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/trade.php*"
			],
			"css": [
				"scripts/content/trade/ttTrade.css"
			],
			"js": [
				"scripts/content/trade/ttTrade.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/itemuseparcel.php*"
			],
			"js": [
				"scripts/content/itemuseparcel/ttItemUseParcel.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/bazaar.php*"
			],
			"js": [
				"scripts/content/bazaar/ttBazaar.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/displaycase.php*"
			],
			"js": [
				"scripts/content/displaycase/ttDisplayCase.js"
			],
			"run_at": "document_end"
		},
		{
			"matches": [
				"https://www.torn.com/imarket.php*"
			],
			"js": [
				"scripts/content/imarket/ttItemMarket.js"
			],
			"run_at": "document_end"
		}
	]
}
